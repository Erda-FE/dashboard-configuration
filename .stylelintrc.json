{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "rules": {
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested",
          "after-single-line-comment"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "extend"
        ]
      }
    ]
  }
}
